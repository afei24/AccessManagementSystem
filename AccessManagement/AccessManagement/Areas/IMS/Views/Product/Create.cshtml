@model AccessManagementServices.DOTS.WMS.IMS.ProductViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "新建";
}

<br />
<h3>新建</h3>
<hr />
<form asp-action="Create" class="layui-form" id="productForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="layui-inline">
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="BarCode" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="BarCode" class="layui-input" />
                <span asp-validation-for="BarCode" class="text-danger"></span>
            </div>
        </div>
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="ProductName" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="ProductName" class="layui-input" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="layui-inline">
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="CateName" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <select asp-items="@Model.Goods" asp-for="CateName" lay-verify="" lay-search></select>
                <span asp-validation-for="CateName" class="text-danger"></span>
            </div>
        </div>
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="Num" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="Num" class="layui-input" />
                <span asp-validation-for="Num" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="layui-inline">
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="MinNum" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="MinNum" class="layui-input" />
                <span asp-validation-for="MinNum" class="text-danger"></span>
            </div>
        </div>
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="MaxNum" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="MaxNum" class="layui-input" />
                <span asp-validation-for="MaxNum" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="layui-inline">
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="Size" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="Size" class="layui-input" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
        </div>
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="UnitName" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <select asp-items="@Model.Measures" asp-for="UnitName" lay-verify="" lay-search></select>
                <span asp-validation-for="UnitName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="layui-inline">
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="InPrice" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="InPrice" class="layui-input" />
                <span asp-validation-for="InPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="OutPrice" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="OutPrice" class="layui-input" />
                <span asp-validation-for="OutPrice" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="layui-inline">
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="AvgPrice" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="AvgPrice" class="layui-input" />
                <span asp-validation-for="AvgPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="StorageNum" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <select asp-items="@Model.Branchs" asp-for="StorageNum" lay-verify="" lay-search></select>
                <span asp-validation-for="StorageNum" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="layui-inline">
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="CanDepositNum" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="CanDepositNum" class="layui-input" />
                <span asp-validation-for="CanDepositNum" class="text-danger"></span>
            </div>
        </div>
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="CusName" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <select asp-items="@Model.Customers" asp-for="CusName" lay-verify="" lay-search></select>
                <span asp-validation-for="CusName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="layui-inline">
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="ValidityDays" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="ValidityDays" class="layui-input" />
                <span asp-validation-for="ValidityDays" class="text-danger"></span>
            </div>
        </div>
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="VolumeSize" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="VolumeSize" class="layui-input" />
                <span asp-validation-for="VolumeSize" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="layui-inline">
        <div class="layui-input-inline" style="width: 300px;">
            <label asp-for="Volume" class="layui-form-label"></label>
            <div class="layui-input-inline" style="width: 200px;">
                <input asp-for="Volume" class="layui-input" />
                <span asp-validation-for="Volume" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="layui-form-item layui-form-text">
        <label asp-for="Remark" class="layui-form-label"></label>
        <div class="layui-input-block">
            <textarea name="Remark" placeholder="请输入内容" class="layui-textarea"></textarea>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="保存" class="layui-btn" />
        <a asp-action="Index" class="layui-btn layui-btn-normal">返回</a>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
//Demo
layui.use('form', function(){
  var form = layui.form;

  //监听提交
    form.on('submit(productForm)', function(data){
    layer.msg(JSON.stringify(data.field));
    return false;
  });
});
</script>
